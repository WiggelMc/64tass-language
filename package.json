{
  "name": "64tass-language",
  "displayName": "64Tass Language",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:64tass-language.helloWorld",
    "onLanguage:64tass"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "64tass-language.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "64tass",
        "aliases": ["64tass", "64tass"],
        "extensions": [".asm",".list"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
			"type": "object",
			"title": "64Tass Config",
			"properties": {
				"64tass-language.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"64tass-language.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
    "jsonValidation": [
      {
        "fileMatch": "64tasslang.json",
        "url": "./schemas/64tass-schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
